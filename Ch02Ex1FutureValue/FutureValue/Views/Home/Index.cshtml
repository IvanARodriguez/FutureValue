@model FutureValue.Models.FutureValueModel;

@{
    ViewBag.Title = "Future Value Calculator";
}
<div class="container d-flex justify-content-center align-items-center flex-column mt-5">
    <h1>Future Value Calculator</h1>
    <form asp-action="Index" method="post">
        <div class="form-group mb-3">
            <label asp-for="MontlyInvestment" class="d-block">Montly Investment:</label>
            <input asp-for="MontlyInvestment"  class="d-block"/>
        </div>

        <div class="form-group mb-3">
            <label asp-for="YearInterestRate" class="d-block">Year Interest rate:</label>
            <input asp-for="YearInterestRate"  class="d-block"/>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Years" class="d-block">Numbers in Years:</label>
            <input asp-for="Years"  class="d-block"/>
        </div>

        <div class="form-group mb-3">
            <label class="d-block">Future Value</label>
            <label>@ViewBag.FV.ToString("c2")</label>
        </div>

        <button class="btn btn-sm btn-success">Calculate</button>
        <a asp-action="Index">Clear</a>

    </form>
</div>